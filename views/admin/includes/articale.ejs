<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<div class="col-12 d-none all-forms" id="articles">
    <form action="/admin/add-new-articel" method="post" id="newArticalForm" enctype="multipart/form-data">
        <h4>add new article</h4>
        <div class="mb-3">
            <label for="title" class="form-label">title</label>
            <input type="text" class="form-control" name="title" placeholder="title">
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">image</label>
            <input type="file" class="form-control" name="img" placeholder="img">
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">category</label>
            <select class="form-select" id="inputGroupSelect01">
                <option selected>Choose catigory</option>
                <%categs.forEach(c=> { %>
                    <option value="<%=c._id%>">
                        <%=c.name%>
                    </option>
                    <%});%>
            </select>
        </div>
        <div class="mb-3">
            <label for="txt">content</label>
            <div id="editor">
                <p>Hello World!</p>
                <p>Some initial <strong>bold</strong> text</p>
                <p><br></p>
            </div>
            <textarea name="content" class="form-control d-none" id="newArticalContent" cols="30" rows="6"></textarea>
        </div>
        <button type="button" id="newArticalBtn" onclick="addNewArical()" class="btn btn-dark">submit</button>
    </form>
    <hr>
    <hr>
    <ul class="list-group">
        <% articels.forEach(a=>{ %>
            <li class="list-group-item"><span class="a-name">
                    <%= a.title %>
                </span>
                <button type="button" class="btn btn-danger" onclick="removeArt('<%=a._id%>')">remove</button>
            </li>
            <%}) %>
    </ul>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
    var quill = new Quill('#editor', {
        theme: 'snow'
    });
</script>